@model product

<h1>جزئیات کالا با شناسه </h1>
<p>@Model.Id </p> 


<div class="mb-3">
  <label for="productid" class="form-label">شناسه کالا</label>
  <input type="text" class="form-control" id="productid" placeholder="Example input placeholder" readonly value="@Model.Id">
</div>
<div class="mb-3">
  <label for="producttitle" class="form-label">نام کالا </label>
  <input type="text" class="form-control" id="producttitle" placeholder="Another input placeholder"  readonly  value="@Model.Name">
</div>
<div class="mb-3">
  <label for="productcount" class="form-label">تعداد </label>
  <input type="text" class="form-control" id="productcount" placeholder="Another input placeholder"  readonly value="@Model.count">
</div>
<div class="mb-3">
  <label for="productprice" class="form-label">قیمت </label>
  <input type="text" class="form-control" id="productprice" placeholder="Another input placeholder"  readonly value="@Model.Price">
</div>
<div class="mb-3">
  <a class="btn btn-light" style="background-color:#a2c9f1" asp-controller="Product" asp-action="product" > بازگشت به لیست </a>
</div>



